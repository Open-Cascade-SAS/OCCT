//=================================================================================================


inline void BSplCLib::CoefsD0(const Standard_Real         U,
                              const TColgp_Array1OfPnt&   Poles,
                              const TColStd_Array1OfReal* Weights,
                              gp_Pnt&                     P)
{
  BSplCLib::CacheD0(U, Poles.Length() - 1, 0., 1., Poles, Weights, P);
}

