inline bool Geom_EvalRepUtils::TryEvalSurfaceD1Mapped(const Geom_EvalRepSurfaceDesc::Mapped& theDesc,
                                                       const double                           theU,
                                                       const double                           theV,
                                                       Geom_Surface::ResD1&                  theResult)
{
  double aURep = 0.0;
  double aVRep = 0.0;
  theDesc.ParamMap.Map(theU, theV, aURep, aVRep);

