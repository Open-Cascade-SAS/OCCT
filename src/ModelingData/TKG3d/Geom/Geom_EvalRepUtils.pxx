    theResult.D1V = aRepRes.D1U * theDesc.ParamMap.ScaleU;
  }
  else
  {
    theResult.D1U = aRepRes.D1U * theDesc.ParamMap.ScaleU;
    theResult.D1V = aRepRes.D1V * theDesc.ParamMap.ScaleV;
  }
