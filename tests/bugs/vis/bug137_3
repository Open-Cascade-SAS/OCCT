vinit
box b 10 10 10
vdisplay b
vfit
vsetdispmode 1

puts "Only top face should be highlighted."

OCC137 1

vselmode 4 1

set x_coord 105
set y_coord 100

vmoveto $x_coord $y_coord

checkcolor $x_coord $y_coord 0 1 1

