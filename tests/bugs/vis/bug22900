set BugNumber OCC22900

set x1 204
set y1 202

vertex v1 0 0 0
vertex v2 0 0 30
edge e1 v1 v2
pcone con1 5 0 10
ttranslate con1 0 0 30
compound con1 e1 c1
don c1
fit
vinit
vdisplay c1
vfit
vsetcolor c1 RED
vsetcolor c1 GREEN
vsetdispmode 1
vsetcolor c1 RED

checkcolor ${x1} ${y1} 1 0 0

checkview -screenshot -3d -path ${imagedir}/${test_image}.png
